<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recipe_detail"
        android:name="com.afitzwa.andrew.tastybakes.RecipeDetailFragment"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.afitzwa.andrew.tastybakes.RecipeDetailActivity"
        tools:listitem="@layout/recipe_step_list_content" />

    <FrameLayout
        android:id="@+id/recipe_step_container"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <include layout="@layout/fragment_recipe_step" />
    </FrameLayout>

</LinearLayout>